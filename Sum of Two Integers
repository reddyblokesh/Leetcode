class Solution:
    def getSum(self, a: int, b: int) -> int:
        # 32 bits integer max
        MAX = 0x7FFFFFFF
        # Mask to get last 32 bits
        mask = 0xFFFFFFFF
        
        while b != 0:
            # XOR for addition without carry
            a, b = (a ^ b) & mask, ((a & b) << 1) & mask
        
        # If a is greater than MAX, it's negative in 32-bit
        return a if a <= MAX else ~(a ^ mask)
